{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": true
  },
  "include": [
    "./scripts/**/*.js",
    "./scripts/**/*.ts",
    "./deploy/**/*.js",
    "./deploy/**/*.ts",
    "./test/**/*.js",
    "./test/**/*.ts",
    "./typechain-types/**/*.ts"
  ],
  "files": ["hardhat.config.ts", "deploy-args.ts", "arguments.js", ".solcover.js"]
}
